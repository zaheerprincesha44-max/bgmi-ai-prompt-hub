<script>
  function copyPrompt(id) {
    const text = document.getElementById(id);
    text.select();
    text.setSelectionRange(0, 99999);
    navigator.clipboard.writeText(text.value);
    alert("Prompt copied!");
  }

  function setGenPrompt(type) {
    const box = document.getElementById("genPrompt");
    if (type === "cinematic") {
      box.value = "Ultra-realistic BGMI male character, cinematic orange-blue lighting, smoke, sparks, dramatic battlefield, shallow depth of field, 4K, highly detailed";
    }
    if (type === "profile") {
      box.value = "BGMI character portrait, clean dark background, sharp focus, professional gaming profile picture, realistic skin texture, ultra HD";
    }
    if (type === "poster") {
      box.value = "Epic BGMI poster style image, dynamic action pose, motion blur, explosive background, cinematic color grading, YouTube thumbnail quality";
    }
  }
</script>

